{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "space-infix-ops": "warn",
        "semi-spacing": "warn",
        "keyword-spacing": "warn",
        "comma-spacing": "warn",
        "no-trailing-spaces": "warn",
        "key-spacing": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "prefer-template": "error",
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "warn"
    }
}
